<article class="product-card">
    <picture class="product-card__picture">
        <source srcset="{{ item.image1 }}, {{ item.image2 }} 2x"/>
        <img src="{{ item.image1 }}" alt="image" class="product-card__image" width="305px" height="272px"/>
    </picture>
    <a href="{{ item.link }}" class="product-card__link button button--primary button--large">{{ products.button }}</a>
    {% if item.status != "default" %}
        <div class="product-card__tag">
            <img src="icon.svg" alt="" class="product-card__icon">
        </div>
    {% endif %}
    <div class="product-card__details">
        <h3 class="product-card__title section-title section-title--big">{{ item.title }}</h3>
        <span class="product-card__subtitle">{{ item.subtitle1 }} • {{ item.subtitle2 }}</span>
        <span class="product-card__text">€{{ item.price }}</span>
    </div>
</article>