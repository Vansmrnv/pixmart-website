<article class="article-card">
    <div class="article-card__picture">
    <picture>
        <source srcset="{{ item.image1 }}, {{ item.image2 }} 2x">
        <img src="{{ item.image1 }}" alt="image" class="article-card__image" width="408" height="289"/>
    </picture>
    </div>
    <h3 class="article-card__title section-title section-title--big">{{ item.title }}</h3>
    <time class="article-card__time" datetime="{{ item.datetime }}">{{ item.date }}</time>
</article>