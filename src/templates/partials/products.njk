<section class="products">
    <div class="products__details">
        <div class="products__text">
            <span class="products__id">{{ products.id }}</span>
            <h2 class="products__title section-title section-title--great">{{ products.title }}</h2>
        </div>
        <div class="products__chevrons">
            <button class="button button--secondary button--icon-large"><img src="icon.svg" alt="" class="products__icon"></button>
            <button class="button button--secondary button--icon-large"><img src="icon.svg" alt="" class="products__icon"></button>
        </div>
    </div>
    <ul class="products__list">
        {% for item in products.cards %}
            <li class="products__item">
                {% include 'partials/product-card.njk'%}
            </li>
        {% endfor %}
    </ul>
</section>