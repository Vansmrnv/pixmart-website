<section class="products">
    <div class="products__wrapper">
        <div class="products__details">
            <div class="products__text">
                <span class="products__id">{{ products.id }}</span>
                <h2 class="products__title section-title section-title--great">{{ products.title }}</h2>
            </div>
            <div class="products__chevrons">
                <button class="left-button button button--secondary button--icon-large">
                    <svg class="products__icon" width="24px" height="24px">
                        <use href="img/sprite.svg#chevron-left"></use>
                    </svg>
                </button>
                <button class="right-button button button--secondary button--icon-large">
                    <svg class="products__icon" width="24px" height="24px">
                        <use href="img/sprite.svg#chevron-right"></use>
                    </svg>
                </button>
            </div>
        </div>
        <ul class="products__list">
            {% for item in products.cards %}
                <li class="products__item">
                    {% include 'partials/product-card.njk'%}
                </li>
            {% endfor %}
        </ul>
    </div>
</section>